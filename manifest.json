{
    "name": "WCA but cooler ðŸ˜Ž",
    "version": "1.0.1",
    "manifest_version": 3,
    "description": "Adds more functionality to the old in-need-of-an-update WCA website",
    "author": "IceCreamSandwch",
    "omnibox": { 
      "keyword": "wca",
      "defaultSuggestion": {
        "description": "Space to see commands"
      }
    },
    "background": {
      "service_worker": "addressBar.js"
    },
    "action": {
      "default_title": "Popup",
      "default_popup": "popup.html",
      "default_icon": {
        "32": "icons/fire32.png",
        "72": "icons/fire72.png",
        "128": "icons/fire128.png",
        "512": "icons/fire512.png"   
      }
    },
    "icons": {
        "16": "icons/fire16.png",
        "32": "icons/fire32.png",
        "72": "icons/fire72.png",
        "128": "icons/fire128.png",
        "512": "icons/fire512.png"
    },
    "content_scripts": [
      {
      "matches": ["https://*.worldcubeassociation.org/*"],
      "js": ["change.js", "popup.js", "applyStyles.js", "signUp.js"],
      "run_at": "document_end"
      },
      {
        "matches": ["https://*.worldcubeassociation.org/*"],
        "css": ["main.css"],
        "run_at": "document_start",
        "all_frames": false
      },
      {
        "matches": ["https://*.worldcubeassociation.org/*"],
        "css": ["target.css"],
        "run_at": "document_start",
        "all_frames": false
      }
    ],
    "host_permissions": [
      "<all_urls>",
      "https://algs.vercel.app/api"
    ],
    "permissions": [
      "storage",
      "alarms",
      "notifications"
    ]    
}